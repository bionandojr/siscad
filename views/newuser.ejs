    <link rel="stylesheet" href="stylesheets/bootstrap.min.css">

    <!-- Estilos personalizados -->
		<link href="stylesheets/pricing.css" rel="stylesheet">
		<link href="stylesheets/dashboard.css" rel="stylesheet">
		<link href="stylesheets/form-validation.css" rel="stylesheet">
		<style type="text/css">/* Chart.js */
		@-webkit-keyframes chartjs-render-animation{from{opacity:0.99}to{opacity:1}}@keyframes chartjs-render-animation{from{opacity:0.99}to{opacity:1}}.chartjs-render-monitor{-webkit-animation:chartjs-render-animation 0.001s;animation:chartjs-render-animation 0.001s;}</style></head>

  </head>
  <body>

    <% include partials/menus.ejs %>

		<div class="container">
			<!-- Formulário de dacastro -->
			<div class="py-5 text-center">
        <h2>Cadastro de Usuários</h2>
      </div>

      <div class="row row_padding">
        <div class="col-md-10">

          <form action="/adduser" method="post" class="needs-validation" novalidate>

              <div class="mb-3">
                <label for="nomeusu">Nome</label>
                <input type="text" class="form-control" name="nomeusu" placeholder="Nome completo" value="" required>
                <div class="invalid-feedback">
                  Entrar com um nome válido.
                </div>
              </div>

  					<div class="form-row"> <!-- Início da row de Patente -->
              <div class="col-md-4 mb-3">
                <label for="postoGraduacao">Patente</label>
                <select class="custom-select d-block w-100" name="postoGraduacao" required>
                  <option value="">Escolha a patente</option>
                  <optgroup label="Oficiais">
                    <option>Coronel</option>
                    <option>Tenente-Coronel</option>
    								<option>Major</option>
    								<option>Capitão</option>
    								<option>Primeiro Tenente</option>
    								<option>Segundo Tenente</option>
                    <option>Aspirante a Oficial</option>
                  </optgroup>
                  <optgroup label="Praças">
                    <option>Sub Tenente</option>
                    <option>1º Sargento</option>
                    <option>2º Sargento</option>
                    <option>3º Sargento</option>
    								<option>Cabo</option>
    								<option>Soldado</option>
                  </optgroup>
                </select>
                <div class="invalid-feedback">
                  Escolha uma categoria.
                </div>
              </div>

              <div class="col-md-4 mb-3">
                <label for="numeropraca">Número de praça</label>
                <input type="text" class="form-control" name="numeropraca" placeholder="Ano.número" value="">
                <div class="invalid-feedback">
                  Entre com o número de praça no formato AAAA.NNNN.
                </div>
              </div>

              <div class="col-md-4 mb-3">
                <label for="matricula">Matrícula</label>
                <input type="text" class="form-control" name="matricula" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Entre com uma matricula.
                </div>
              </div>
            </div> <!-- fim da row de Patente -->

            <div class="mb-3">
              <label for=funcao>Função</label>
              <input type="text" class="form-control" name="funcao" placeholder="Função que exerce">
            </div>

            <hr class="mb-4">

            <div class="form-row"> <!-- Início da row de Endereço -->
              <div class="col-md-9 mb-3">
                <label for="logradouro">Rua/Avenida/Travessa</label>
                <input type="text" class="form-control" name="logradouro" placeholder="Insira nome da rua">
              </div>
              <div class="col-md-3 mb-3">
                <label for="numero">Número</label>
                <input type="text" class="form-control" name="numero">
              </div>
            </div> <!-- Fim da row de Endereço -->

            <!-- Bairro, cidade e estado -->
            <div class="form-row">
              <div class="col-md-4 mb-3">
                <label for="bairro">Bairro</label>
                <input type="text" class="form-control" name="bairro" placeholder="Informe o nome do bairro">
              </div>

              <div class="col-md-4 mb-3">
                <label for="cidade">Cidade</label>
                <input type="text" class="form-control" name="cidade" placeholder="Informe o nome do cidade">
              </div>

              <div class="col-md-4 mb-3">
                <label for="estado">Estado</label>
                <input type="text" class="form-control" name="estado" placeholder="Informe o nome do estado">
              </div>
            </div>

            <hr class="mb-4">

            <div class="form-row"> <!-- Início da row de Contato -->
              <div class="col-md-4 mb-3">
                <label for="contato">Telefone</label>
  							<div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">(89)</span>
                  </div>
                  <input type="tel" class="form-control" name="contato" placeholder="0000-0000" required>
                  <div class="invalid-feedback" style="width: 100%;">
                    Entre com um contato válido.
                  </div>
                </div>
              </div>

              <div class="col-md-8 mb-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email">
                <div class="invalid-feedback" style="width: 100%;">
                      Entre com um email válido.
                </div>
              </div>

            </div> <!-- fim da row de Contato -->


            <hr class="mb-4">


            <div class="form-row"> <!-- início da row email e senha -->
              <div class="col-md-4 mb-3">
                <label for="usuario">Usuário</label>
                <input type="text" class="form-control" name="usuario">
              </div>
              <div class="col-md-4 mb-3">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="idsenha" name="senha">
              </div>
              <div class="col-md-4 mb-3">
                <label for="confirmaSenha">Confirme a senha</label>
                <input type="password" class="form-control" id="idconfirmaSenha" name="confirmaSenha">
                <div class="invalid-feedback" style="width: 100%;">
                    As senhas não coincidem.
                </div>
              </div>
            </div> <!-- Final da row email e senha -->

            <hr class="mb-4">
            <div class="form-row">
              <button class="btn btn-primary btn-lg offset-md-1" type="submit">Efetuar cadastro</button>
              <button class="btn btn-danger btn-lg offset-md-1" type="reset">Limpar campos</button>
              <a href="/listusuarios"
              <button class="btn btn-info btn-lg offset-md-1" type="button">Listar usuários</button>
            </a>
            </div>

          </form>
        </div>
      </div>

		  <footer class="footer_fixed">
					<div class="row">
					  <div class="col-12 col-md">
							<small class="">© 2017-2018</small>
					  </div>
					</div>
		  </footer>

		</div>	<!--Fim do container -->

			<!-- Bootstrap core JavaScript
		================================================== -->
